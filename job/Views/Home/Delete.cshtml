@model job.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ApplyForJob</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            عنوان الوظيفة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.job.JobTitle)
        </dd>
        <dt>
            نص الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            تاريخ الرسالة
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplyDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.job.JobImage)
        </dt>

        <dd>
            <img src="~/UpLoads/@Html.DisplayFor(model => model.job.JobImage)" class="thumbnail" style="width:48px;height:48px" />
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("العودة الى الخلف", "Index")
        </div>
    }
</div>
